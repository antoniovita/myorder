generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  id        String @id @default(cuid())
  email     String
  password  String
  name      String
  item      Item[]
  table     Table[]
}

model Table {
  id          String    @id @default(cuid())
  providerId  String
  number      Int
  provider    Provider  @relation(fields: [providerId], references: [id], onDelete: Cascade)
  user        User[]
  order       Order[]
}

model Adm {
  id        String    @id @default(cuid())
  name      String
}

model User {
  id        String    @id @default(cuid())
  tableId   String
  table     Table     @relation(fields: [tableId], references: [id], onDelete: Cascade)
  name       String
}

model Order {
  id          String   @id @default(cuid())
  tableId     String   
  table       Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
  price       Int
  orderItem   OrderItem[]
}

model OrderItem {
  id          String  @id @default(cuid())
  itemId      String
  item        Item  @relation(fields: [itemId], references: [id], onDelete: Cascade)
  quantity    Int
  orderId     String
  order       Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Item {
  id          String @id @default(cuid())
  providerId  String
  name        String
  price       Float
  provider    Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  orderItem   OrderItem[]
}

